{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "target": "ES5"
    },
    "include": [
        "./src/**/*"
    ]
}